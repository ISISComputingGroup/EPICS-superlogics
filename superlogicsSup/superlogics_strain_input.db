record(ai, "$(P)VALUE")
{
    field(DESC, "Value from analog input")
    field(DTYP, "stream")
    field(SCAN, "1 second")
    field(INP, "@sprlg_strain.proto get_value($(P),$(ADDR)) $(PORT)")
    field(PREC, "4")
    field(EGU, "$(UNITS)")
    field(HHSV, "MAJOR")
    field(LLSV, "MAJOR")
    field(HIHI, "+9999.9")
    field(LOLO, "-9999.9")
    field(PINI, "YES")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:VALUE")
    field(SDIS, "$(P)DISABLE")
    info(INTEREST, "HIGH")
    info(archive, "VAL")
    info(alarm, "SPRLG")
}

### SIMULATION RECORDS ###

record(ai, "$(P)SIM:VALUE")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
}
